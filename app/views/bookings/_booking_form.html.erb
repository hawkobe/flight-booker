<h2>Please fill out passenger info for each passenger</h2>

<%= form_with model: @booking, method: :post do |form| %>
  <% if @booking.errors.any? %>
    <div>
      <p class="sub-title error-content">
        <%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:
      </p>
      <ul>
        <% @booking.errors.each do |error| %>
          <li class="error-content"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form.hidden_field :flight_id, value: @flight.id %>

  <%= form.fields_for :passengers do |p_form| %>
      <div>
        <%= p_form.label :name %>
        <%= p_form.text_field :name %>
        <%= p_form.label :email %>
        <%= p_form.text_field :email %>
      </div>
  <% end %>
  <%= form.submit "Book Flight" %>
<% end %>